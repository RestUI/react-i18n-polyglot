{
  "name": "react-i18n-polyglot",
  "version": "1.0.1",
  "description": ":book: Set of React components to provide translation capabilities with the help of Polyglot",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "compile": "babel ./src -d ./dist",
    "build": "npm run clean && npm run compile",
    "npm-publish": "npm run build && npm publish",
    "test": "mocha ./test --compilers js:babel-register --require babel-polyfill",
    "coverage": "babel-node ./node_modules/.bin/isparta cover _mocha"
  },
  "repository": {
    "url": "git+https://github.com/RestUI/react-i18n-polyglot.git",
    "type": "git"
  },
  "keywords": [
    "react",
    "i18n",
    "polyglot"
  ],
  "author": "Rest UI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RestUI/react-i18n-polyglot/issues"
  },
  "homepage": "https://github.com/RestUI/react-i18n-polyglot#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-babili": "^0.0.12",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.0",
    "isparta": "^4.0.0",
    "mocha": "^3.2.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0"
  },
  "dependencies": {
    "node-polyglot": "^2.2.2",
    "prop-types": "^15.5.8",
    "recompose": "^0.23.1"
  }
}
